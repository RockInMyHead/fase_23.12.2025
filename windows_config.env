# Windows-specific configuration for FaceRelis
# Copy this file to .env when running on Windows

# Face Detection Settings (optimized for Windows)
insightface_model=buffalo_l
secondary_model=buffalo_m
use_dual_embedder=true
use_advanced_quality_validation=true
use_advanced_rescue=true
rescue_strategy=balanced
quality_threshold=0.4
min_face_size=64
max_face_size=512
max_face_angle=30

# Clustering Settings
hdbscan_min_cluster_size=2
hdbscan_min_samples=null

# File System Settings
supported_extensions=[".jpg",".jpeg",".png",".bmp",".tiff",".webp"]
max_image_size_mb=50

# Task Management
max_concurrent_tasks=2
task_timeout_seconds=1800

# API Settings
host=0.0.0.0
port=8000
debug=false
